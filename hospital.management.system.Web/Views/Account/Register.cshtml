@using hospital.management.system.Models.Entities
@using hospital.management.system.Models.Enums
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model hospital.management.system.BLL.Models.Accounts.RegisterModel
@inject SignInManager<ApplicationUser> signinManager
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <!-- Navbar brand/logo -->
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">
            <i class="fas fa-hospital"></i> HMS
        </a>
        <!-- Toggler for mobile view -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <!-- Right-aligned login and register links -->
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Register", "Account")">
                        <i class="fas fa-user-plus"></i> Register
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Login", "Account")">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6"> <!-- Reduced the width for a more compact look -->
            <div class="card">
                <div class="card-header text-center">
                    <h3 class="card-title">Register</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Register" asp-controller="Account" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <!-- User Name -->
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user-circle"></i></span>
                                <input asp-for="UserName" class="form-control form-control-sm" placeholder="Choose a username"/>
                            </div>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <!-- First Name -->
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="FirstName" class="form-control form-control-sm" placeholder="Enter your first name"/>
                            </div>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <!-- Last Name -->
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="LastName" class="form-control form-control-sm" placeholder="Enter your last name"/>
                            </div>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <!-- SSN -->
                        <div class="mb-3">
                            <label asp-for="SSN" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                                <input asp-for="SSN" class="form-control form-control-sm" placeholder="Enter your SSN"/>
                            </div>
                            <span asp-validation-for="SSN" class="text-danger"></span>
                        </div>
                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Email" type="email" class="form-control form-control-sm" placeholder="Enter your email"/>
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <!-- Gender -->
                        <div class="mb-3">
                            <label asp-for="Gender" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-venus-mars"></i></span>
                                <select asp-for="Gender" class="form-control form-control-sm" asp-items="Html.GetEnumSelectList<Gender>()"></select>
                            </div>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                      
                        <!-- Phone Number -->
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                <input asp-for="Phone" class="form-control"
                                       placeholder="Enter your phone number"/>
                            </div>
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <!-- Date -->
                        <div class="mb-3">
                            <label asp-for="DateOfBirth" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                <input asp-for="DateOfBirth" type="date" class="form-control" />
                            </div>
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="Password" type="password" class="form-control form-control-sm" placeholder="Enter your password"/>
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <!-- Confirm Password -->
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-sm" placeholder="Confirm your password"/>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>


                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-sm"><i class="fas fa-check"></i> Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<style>
    /* CSS for reducing width and height */
    .form-control-sm {
        height: 35px; /* Adjust the height */
        font-size: 0.875rem; /* Smaller font size */
        padding: 6px 12px; /* Adjust padding */
    }

    .input-group-text {
        padding: 0.375rem 0.75rem; /* Adjust the padding of the icon */
    }

    .btn-sm {
        font-size: 0.875rem;
        padding: 6px 12px;
    }
</style>
