@model hospital.management.system.BLL.Models.Accounts.ResetPasswordModel

<div class="row col-md-10 offset-md-1">
    <h1 class="text-primary text-center pt-2">Reset Password</h1>
    <form method="post">
        <input asp-for="Token" hidden />
        <div class="border p-2 rounded" style="max-width: 420px; margin: 0 auto; padding: 20px;"> <!-- Reduced width to 420px -->
            <p class="text-center">Reset your password</p>
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Email Field with icon on the left -->
            <div class="form-group">
                <label asp-for="Email" class="col-12"></label>
                <div class="col-md-12">
                    <div class="input-group">
                        <!-- Icon added to the left of the input field -->
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        <input asp-for="Email" class="form-control" style="width: 70%; margin: 0 auto;" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <!-- Password Field with icon on the left -->
            <div class="form-group">
                <label asp-for="Password" class="col-12"></label>
                <div class="col-md-12">
                    <div class="input-group">
                        <!-- Icon added to the left of the input field -->
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input asp-for="Password" class="form-control" style="width: 70%; margin: 0 auto;" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <!-- Confirm Password Field with icon on the left -->
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="col-12"></label>
                <div class="col-md-12">
                    <div class="input-group">
                        <!-- Icon added to the left of the input field -->
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input asp-for="ConfirmPassword" class="form-control" style="width: 70%; margin: 0 auto;" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <!-- Submit Button with decreased width -->
            <div class="form-group pt-3">
                <div class="col-md-6 offset-md-3">
                    <button class="btn btn-success form-control" type="submit" style="width: 80%; margin: 0 auto;">
                        Reset Password
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
