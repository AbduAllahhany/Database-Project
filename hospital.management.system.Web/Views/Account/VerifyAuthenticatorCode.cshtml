@using Microsoft.AspNetCore.Mvc.TagHelpers
@model hospital.management.system.BLL.Models.Accounts.VerifyAuthenticatorModel

<div class="row col-md-10 offset-md-1">
    <h1 class="text-primary text-center pt-2">Verify Authenticator Code</h1>
    <form method="post" asp-controller="Account" asp-action="VerifyAuthenticatorCode"
          asp-route-returnurl="@ViewData["ReturnUrl"]">
        <input asp-for="RememberMe" type="hidden" />
        <div class="border p-2 rounded" style="max-width: 420px; margin: 0 auto; padding: 20px;"> <!-- Reduced width to 420px -->
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Code Field with icon on the left -->
            <div class="form-group">
                <label asp-for="Code" class="col-12"></label>
                <div class="col-md-12">
                    <div class="input-group">
                        <!-- Icon added to the left of the input field -->
                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                        <input asp-for="Code" class="form-control" style="width: 70%; margin: 0 auto;" />
                    </div>
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
            </div>

            <!-- Submit Button with decreased width -->
            <div class="form-group pt-3">
                <div class="col-md-6 offset-md-3">
                    <button class="btn btn-success form-control" type="submit" style="width: 80%; margin: 0 auto;">
                        Submit
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
