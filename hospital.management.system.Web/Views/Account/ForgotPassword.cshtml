@model hospital.management.system.BLL.Models.Accounts.ForgotPasswordModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6"> <!-- Reduced the width for a more compact look -->
            <div class="card">
                <div class="card-header text-center">
                    <h3 class="card-title">Forgot your Password</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Account" asp-action="ForgotPassword" asp-route-returnurl="@ViewData["ReturnUrl"]">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        
                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Email" type="email" class="form-control form-control-sm" placeholder="Enter your email"/>
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-sm"><i class="fas fa-check"></i> Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<style>
    /* CSS for reducing width and height */
    .form-control-sm {
        height: 35px; /* Adjust the height */
        font-size: 0.875rem; /* Smaller font size */
        padding: 6px 12px; /* Adjust padding */
    }

    .input-group-text {
        padding: 0.375rem 0.75rem; /* Adjust the padding of the icon */
    }

    .btn-sm {
        font-size: 0.875rem;
        padding: 6px 12px;
    }
</style>