@model hospital.management.system.BLL.Models.Staff.StaffDashboardModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff Dashboard</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f0f4f7;
            font-family: 'Arial', sans-serif;
        }

        .card {
            border: none;
            border-radius: 16px;
            background-color: #ffffff;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.05);
            transition: box-shadow 0.3s ease;
        }

        .card:hover {
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
        }

        .card-title {
            font-weight: 600;
            font-size: 1.2rem;
            color: #2d3748;
        }

        .btn-custom {
            background-color: rgb(13, 110, 253);
            color: white;
            border-radius: 8px;
            padding: 0.6rem 1.4rem;
            font-size: 1rem;
        }

        .btn-custom:hover {
            background-color: rgba(13, 110, 253, 0.9);
        }

        .section-title {
            font-weight: 600;
            font-size: 1.4rem;
            color: rgb(13, 110, 253);
            margin: 1.5rem 0 1rem;
            text-align: center;
        }

        h2 {
            font-size: 2rem;
            color: rgb(13, 110, 253);
            font-weight: bold;
            margin-bottom: 2rem;
        }

        .container {
            max-width: 960px;
        }

        .list-unstyled li {
            margin-bottom: 0.4rem;
            font-size: 1rem;
            color: #4a5568;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <h2 class="text-center">Staff Dashboard</h2>

        @if (Model != null)
        {
            <!-- Staff Information -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card p-4 text-center">
                        <h5 class="card-title">Staff Information</h5>
                        <ul class="list-unstyled mb-0">
                            <li><strong>Name:</strong> @Model.Staff.FirstName @Model.Staff.LastName</li>
                            <li><strong>Role:</strong> @Model.Staff.Role</li>
                            <li><strong>Department:</strong> @(Model.department?.Name ?? "Not Assigned")</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card p-4 text-center">
                        <h5 class="card-title">Schedule</h5>
                        <ul class="list-unstyled mb-0">
                            <li><strong>Start Time:</strong> @Model.Staff.StartSchedule</li>
                            <li><strong>End Time:</strong> @Model.Staff.EndSchedule</li>
                            <li>
                                <strong>Day of Work:</strong> 
                                @{
                                    var daysOfWeek = new[] 
                                    { 
                                        "Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday" 
                                    };
                                    var day = Model.Staff.DayOfWork < daysOfWeek.Length ? 
                                              daysOfWeek[Model.Staff.DayOfWork] : "Unknown";
                                    @day
                                }
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-danger text-center">
                Error: Model is null.
            </div>
        }
        <div class="mb-4 text-center">
            <button class="btn btn-secondary btn-sm" onclick="goBack()">
                <i class="fas fa-home"></i>
                Go Back
            </button>
            <script>
                function goBack() {
                    window.history.back();
                }
            </script>
        </div>
    </div>

    <!-- Bootstrap 5 JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
