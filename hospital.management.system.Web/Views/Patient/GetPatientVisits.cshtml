@model IEnumerable<hospital.management.system.BLL.Models.Patient.PatientVisit>

@{
    ViewData["Title"] = "Patient Visits";
}

<div class="container mt-5">
    <h2 class="text-center">Patient Visit History</h2>
    @if (Model != null && Model.Any())
    {

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <table class="table table-bordered table-striped">
                    <thead class="thead-dark">
                    <tr>
                        <th scope="col">Patient Name</th>
                        <th scope="col">Visit Date</th>
                        <th scope="col">Reason</th>
                        <th scope="col">Notes</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var visit in Model)
                    {
                        <tr>
                            <td>@visit.PatientName</td>
                            <td>@visit.Date.ToString("MMMM dd, yyyy")</td>
                            <td>@visit.Reason</td>
                            <td>@(string.IsNullOrEmpty(visit.Notes) ? "No notes available" : visit.Notes)</td>
                            <!-- Button to return to Dashboard -->
                            <div class="mb-4 text-center">
                                <a asp-action="DashBoard" asp-controller="Patient" class="btn btn-secondary btn-sm">
                                    <i class="fas fa-home"></i> Return to Dashboard
                                </a>
                            </div>

                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    }
    else
    {
    <div class="alert alert-warning">
        No Visits found.
    </div>
    }
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script> <!-- FontAwesome -->
}

<style>
    /* Styling for the Patient Visits Table */
    table {
        background-color: white;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    thead.thead-dark th {
        background-color: #343a40;
        color: white;
    }

    tbody tr:hover {
        background-color: #f2f2f2;
    }

    /* Center the table in the container */
    .table-container {
        margin-top: 20px;
        text-align: center;
    }

    /* Button Styling */
    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
        padding: 8px 16px;
        font-size: 14px;
        border-radius: 5px;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .btn-secondary:focus {
        outline: none;
        box-shadow: 0 0 0 2px rgba(108, 117, 125, 0.4);
    }
</style>
