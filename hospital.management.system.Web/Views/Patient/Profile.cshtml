@model hospital.management.system.BLL.Models.Patient.PatientProfileModel

@{
    ViewData["Title"] = "Patient Profile";
}

<h2 class="mt-5 text-center">Patient Profile</h2>
<div class="container col-md-8">
    <!-- Basic Information Section -->
    <h5 class="mt-3"><i class="fas fa-user"></i> Basic Information</h5>
    <ul class="list-group mb-4">
        <li class="list-group-item">
            <i class="fas fa-user-circle"></i> Name: @Model.Name
        </li>
        <li class="list-group-item">
            <i class="fas fa-venus-mars"></i> Gender: @Model.Gender
        </li>
        <li class="list-group-item">
            <i class="fas fa-calendar-alt"></i> Date of Birth: @Model.Birthdate.ToString()
        </li>
        <li class="list-group-item">
            <i class="fas fa-id-card"></i> National ID/Passport: @Model.NationalIdOrPassport
        </li>
        <li class="list-group-item">
            <i class="fas fa-phone"></i> Phone: @Model.PhoneNumber
        </li>
        <li class="list-group-item">
            <i class="fas fa-envelope"></i> Email: @Model.Email
            <span class="badge @(Model.IsEmailConfirmed ? "bg-success" : "bg-danger")">
                @(Model.IsEmailConfirmed ? "Confirmed" : "Not Confirmed")
            </span>
            @if (!Model.IsEmailConfirmed)
            {
                <a class="btn btn-link" href="@Url.Action("ConfirmEmailMessage", "Account")">
                    <i class="fas fa-envelope-check"></i> Confirm Email
                </a>
            }
        </li>
        <li class="list-group-item">
            <i class="fas fa-shield-alt"></i> Two-Factor Auth:
            <span class="badge @(Model.IsTwoFactorEnabled ? "bg-success" : "bg-danger")">
                @(Model.IsTwoFactorEnabled ? "Enabled" : "Disabled")
            </span>
            @if (!Model.IsTwoFactorEnabled)
            {
                <a href="@Url.Action("EnableAuthenticator", "Account")" class="btn btn-link">
                    <i class="fas fa-shield-alt"></i> Enable Two-Factor Auth
                </a>
            }
        </li>
    </ul>

    <!-- Medical Information Section -->
    <h5><i class="fas fa-user-injured"></i> Medical Information</h5>
    <ul class="list-group mb-4">
        <li class="list-group-item">
            <i class="fas fa-tint"></i> Blood Group: @Model.BloodGroup
        </li>
        <li class="list-group-item">
            <i class="fas fa-allergies"></i> Allergies: @Model.Allergies
        </li>
        <li class="list-group-item">
            <i class="fas fa-notes-medical"></i> Chronic Diseases: @Model.ChronicDiseases
        </li>
        <li class="list-group-item">
            <i class="fas fa-briefcase-medical"></i> Insurance Provider: @Model.InsurancePoviderName
        </li>
        <li class="list-group-item">
            <i class="fas fa-dollar-sign"></i> Coverage Amount: @Model.CoverageMoney
        </li>
        <li class="list-group-item">
            <i class="fas fa-phone-square-alt"></i> Emergency Contact: @Model.EmergencyContactNumber
        </li>
    </ul>

    <!-- Buttons Section -->
    <div class="row mb-4 centered-content">
        <!-- Adjusted Edit Profile Button -->
        <a class="btn btn-custom" href="@Url.Action("Edit", "Patient", new { Id = @Model.Id })">
            <i class="fas fa-edit"></i> Edit Profile
        </a>
    </div>

    <div class="row mb-4 centered-content">
        <!-- Adjusted Forgot Password Button -->
        <a class="btn btn-outline-custom" href="@Url.Action("ForgotPassword", "Account")">
            <i class="fas fa-unlock-alt"></i> Forgot Password
        </a>
    </div>
</div>

<style>
    body {
        background-color: #f0f4f7;
        font-family: 'Arial', sans-serif;
    }

    .card {
        border: none;
        border-radius: 16px;
        background-color: #ffffff;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.05);
        transition: box-shadow 0.3s ease;
    }

    .card:hover {
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    }

    .btn-custom {
        background-color: rgb(13, 110, 253);
        color: white;
        border-radius: 8px;
        padding: 0.5rem 1.4rem;
        font-size: 1rem;
    }

    .btn-custom:hover {
        background-color: rgba(13, 110, 253, 0.9);
    }

    .btn-outline-custom {
        background-color: transparent;
        border: 1px solid rgb(13, 110, 253);
        color: rgb(13, 110, 253);
        border-radius: 8px;
        padding: 0.6rem 1.4rem;
    }

    .btn-outline-custom:hover {
        background-color: rgb(13, 110, 253);
        color: white;
    }

    .icon-circle {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background-color: rgb(13, 110, 253);
        color: white;
        font-size: 28px;
        margin-bottom: 15px;
    }

    .section-title {
        font-weight: 600;
        font-size: 1.4rem;
        color: rgb(13, 110, 253);
        margin: 1.5rem 0 1rem;
        text-align: center;
    }

    .centered-content {
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    h2 {
        font-size: 2rem;
        color: rgb(13, 110, 253);
        font-weight: bold;
        margin-bottom: 2rem;
    }
</style>

<!-- Optional: Include Font Awesome and Bootstrap JS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
