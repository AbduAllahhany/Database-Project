@using hospital.management.system.Models.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AdminEditDoctorModel 
@{
    ViewData["Title"] = "Edit Doctor";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header text-center">
                    <h3 class="card-title">Edit Doctor</h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditDoctor" asp-controller="Admin" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <input type="hidden" asp-for=DoctorId value=@Model.DoctorId />
                        <input type="hidden" asp-for="UserId" value=@Model.UserId />
                        <!-- User Name -->
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user-circle"></i></span>
                                <input asp-for="UserName" class="form-control" placeholder="Choose a username" />
                            </div>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <!-- First Name -->
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user-circle"></i></span>
                                <input asp-for="FirstName" class="form-control" placeholder="Choose a username" />
                            </div>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <!-- Last Name -->
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user-circle"></i></span>
                                <input asp-for="LastName" class="form-control" placeholder="Choose a username" />
                            </div>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <!-- Salary -->
                        <div class="mb-3">
                            <label asp-for="Salary" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-credit-card"></i></span>
                                <input asp-for="Salary" class="form-control" />
                            </div>
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>
                        <!-- Phone Number -->
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                            </div>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <!-- working hours -->
                        <div class="mb-3">
                            <label asp-for="WorkingHours" class="form-label">Working Hours</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-clock"></i></span>
                                <input asp-for="WorkingHours" class="form-control"
                                       type="number" min="4" max="8" step="1"
                                       value="4" id="workingHoursRange" />
                            </div>
                            <span asp-validation-for="WorkingHours" class="text-danger"></span>
                        </div>
                        <!-- Time -->
                        <div class="mb-3">
                            <label asp-for="StartSchedule" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa fa-clock"></i></span>
                                <input asp-for="StartSchedule" type="time" class="form-control" />
                            </div>
                            <span asp-validation-for="StartSchedule" class="text-danger"></span>
                        </div>
                        <!-- Time -->
                        <div class="mb-3">
                            <label asp-for="EndSchedule" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa fa-clock"></i></span>
                                <input asp-for="EndSchedule" type="time" class="form-control" />
                            </div>
                            <span asp-validation-for="EndSchedule" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script> <!-- FontAwesome -->
}


<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
