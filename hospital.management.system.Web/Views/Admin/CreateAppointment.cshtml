@model AppointmentModel

<h2 class="text-center mt-4">Create Appointment</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-calendar-plus mr-2"></i> New Appointment</h4>
                </div>
                <div class="card-body">
                    <!-- Begin form for creating an appointment -->
                    <form asp-controller="Admin" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group">
                            <label><i class="fas fa-user-md"></i> Patient Username</label>
                            <select asp-for="PatientUserId" class="form-control">
                                @foreach (var patient in Model.PatientUsernameId)
                                {
                                    <option value="@patient.Id">@patient.Username</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label><i class="fas fa-user-md"></i> Doctor Username</label>
                            <select asp-for="DoctorUserId" class="form-control" id="doctorSelect">
                                @foreach (var doctor in Model.DoctorUsernameId)
                                {
                                    <option value="@doctor.Id">@doctor.Username</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label asp-for="Date"><i class="fas fa-calendar"></i> Appointment Date</label>
                            <input asp-for="Date" class="form-control" type="date"/>
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Time"><i class="fas fa-clock"></i> Appointment Date</label>
                            <input asp-for="Time" class="form-control" type="time"/>
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Reason"><i class="fas fa-info-circle"></i> Reason for Appointment</label>
                            <textarea asp-for="Reason" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>

                        <!-- Submit button -->
                        <div class="text-right">
                            <button asp-action="CreateAppointment" type="submit" class="btn btn-success">
                                <i class="fas fa-calendar-check"></i> Create Appointment
                            </button>

                            <a asp-action="Dashboard" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include FontAwesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>
