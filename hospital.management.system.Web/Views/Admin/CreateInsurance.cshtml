@model InsuranceCreateModel

@{
    ViewData["Title"] = "Create Insurance Record";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header text-center">
                    <h3 class="card-title">Create Insurance</h3>
                </div>
                <div class="card-body">
                    <form asp-action="CreateInsurance" asp-controller="Admin" method="post" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="PatientId"/>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <!-- Provider Name -->
                        <div class="mb-3">
                            <label asp-for="ProviderName" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-hands-helping"></i></span>
                                <input asp-for="ProviderName" class="form-control" placeholder="Choose a Provider Name"/>
                            </div>
                            <span asp-validation-for="ProviderName" class="text-danger"></span>
                        </div>
                        <!-- Provider Policy -->
                        <div class="mb-3">
                            <label asp-for="PolicyNumber" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                                <input asp-for="PolicyNumber" class="form-control" placeholder="Enter Policy Number"/>
                            </div>
                            <span asp-validation-for="PolicyNumber" class="text-danger"></span>
                        </div>
                        <!-- CoverageMoney -->
                        <div class="mb-3">
                            <label asp-for="CoverageMoney" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-money-bill-wave"></i></span>
                                <input asp-for="CoverageMoney" class="form-control"
                                       placeholder="Coverage Money"/>
                            </div>
                            <span asp-validation-for="CoverageMoney" class="text-danger"></span>
                        </div>
                        <!-- Date -->
                        <div class="mb-3">
                            <label asp-for="ExpiryDate" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                <input asp-for="ExpiryDate" type="date" class="form-control" />
                            </div>
                            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                        </div>
                       
                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Submit</button>
                        </div>
                    </form>
                </div>
                <div class="mb-4 text-center">
                    <button class="btn btn-secondary btn-sm" onclick="goBack()">
                        <i class="fas fa-home"></i>
                        Go Back
                    </button>
                    <script>
                        function goBack() {
                            window.history.back();
                        }
                    </script>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script> <!-- FontAwesome -->

    <script>
        // Optional: To update the display value dynamically
        const rangeInput = document.getElementById("workingHoursRange");
        rangeInput.addEventListener("input", function () {
            const display = document.getElementById("workingHoursValue");
            display.textContent = rangeInput.value;
        });
    </script>
}


<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
