@using hospital.management.system.DAL
@using hospital.management.system.Models.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model hospital.management.system.BLL.Models.Admin.AdminEditStaffModel 
@{
    ViewData["Title"] = "Edit Staff";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header text-center">
                    <h3 class="card-title">Edit User</h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditStaff" asp-controller="Admin" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <input type="hidden" asp-for=Id value=@Model.Id />
                     
                        <!-- First Name -->
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="FirstName" class="form-control" placeholder="Enter your First Name" />
                            </div>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <!-- Last Name -->
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="LastName" class="form-control" placeholder="Enter your Last Name" />
                            </div>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <!-- DayOfWork  -->
                        <div class="mb-3">
                            <label asp-for="DayOfWork" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-venus-mars"></i></span>
                                <select asp-for="DayOfWork" class="form-control"
                                        asp-items="Html.GetEnumSelectList<DayOfWeek>()"></select>
                            </div>
                            <span asp-validation-for="DayOfWork" class="text-danger"></span>
                        </div>
                        <!-- Time -->
                        <div class="mb-3">
                            <label asp-for="StartSchedule" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa fa-clock"></i></span>
                                <input asp-for="StartSchedule" type="time" class="form-control" />
                            </div>
                            <span asp-validation-for="StartSchedule" class="text-danger"></span>
                        </div>
                        <!-- Time -->
                        <div class="mb-3">
                            <label asp-for="EndSchedule" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa fa-clock"></i></span>
                                <input asp-for="EndSchedule" type="time" class="form-control" />
                            </div>
                            <span asp-validation-for="EndSchedule" class="text-danger"></span>
                        </div>
                        <!-- Submit Button -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script> <!-- FontAwesome -->
}



