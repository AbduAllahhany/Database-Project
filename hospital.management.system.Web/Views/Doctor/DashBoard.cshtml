@model DoctorDashBoardModel

<div class="container my-5">
    <h2 class="text-center">Doctor Dashboard</h2>

    <!-- Doctor Information -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card p-4 text-center">
                <div class="icon-circle">
                    <i class="bi bi-person"></i>
                </div>
                <h5 class="card-title">Doctor Information</h5>
                <ul class="list-unstyled mb-0">
                    <li><strong>Name:</strong> @Model.DoctorName</li>
                    <li><strong>Specialization:</strong> @Model.Specialization</li>
                    <li><strong>Department:</strong> @Model.DepartmentName</li>
                    <li><strong>Working Hours:</strong> @Model.WorkingHours</li>
                </ul>
            </div>
        </div>

        <!-- Appointments Section -->
        <div class="col-md-8">
            <div class="card p-4 text-center">
                <div class="icon-circle">
                    <i class="bi bi-calendar-event"></i>
                </div>
                <h5 class="card-title">Appointments</h5>
                
                @if (Model.Appointments.Any())
                {
                    <ul class="list-unstyled mb-0">
                        @foreach (var appointment in Model.Appointments)
                        {
                            <li>
                                <strong>Date:</strong> @appointment.Date.ToShortDateString() <br />
                                <strong>Time:</strong> @appointment.Time.ToShortTimeString() <br />
                                <strong>Patient:</strong> @appointment.Patient.FirstName
                            </li>
                            <hr />
                        }
                    </ul>
                }
                else
                {
                    <p>No appointments available.</p>
                }
            </div>
        </div>
    </div>

    <!-- Medical Records Section -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card p-4 text-center">
                <div class="icon-circle">
                    <i class="bi bi-file-earmark-medical"></i>
                </div>
                <h5 class="card-title">Medical Records</h5>

                @if (Model.MedicalRecords.Any())
                {
                    <ul class="list-unstyled mb-0">
                        @foreach (var medicalRecord in Model.MedicalRecords)
                        {
                            <li>
                                <strong>Patient:</strong> @medicalRecord.Patient.FirstName <br />
                                <strong>Date:</strong> @medicalRecord.DateOfRecording.ToShortDateString() <br />
                                <strong>Details:</strong> @medicalRecord.Prescription
                            </li>
                            <hr />
                        }
                    </ul>
                }
                else
                {
                    <p>No medical records available.</p>
                }
            </div>
        </div>
    </div>
    <!-- Links to Related Data -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card p-4 text-center">
                <div class="icon-circle">
                    <i class="bi bi-clock-history"></i>
                </div>
                <h5 class="card-title">Pending Appointments</h5>
                <p>View pending appointments</p>
                <a href="@Url.Action("PendingAppointment", "Doctor")" class="btn btn-custom">View Pending</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card p-4 text-center">
                <div class="icon-circle">
                    <i class="bi bi-calendar-day"></i>
                </div>
                <h5 class="card-title">Daily Appointments</h5>
                <p>View today's appointments</p>
                <a href="@Url.Action("DailyAppointment", "Doctor")" class="btn btn-custom">View Daily</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card p-4 text-center">
                <div class="icon-circle">
                    <i class="bi bi-calendar-event"></i>
                </div>
                <h5 class="card-title">Upcoming Appointments</h5>
                <p>Manage upcoming appointments</p>
                <a href="@Url.Action("UpcomingAppointment", "Doctor")" class="btn btn-custom">View Upcoming</a>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card p-4 text-center">
                <div class="icon-circle">
                    <i class="bi bi-arrow-repeat"></i>
                </div>
                <h5 class="card-title">Follow-Up Appointments</h5>
                <p>Schedule follow-up appointments</p>
                <a href="@Url.Action("FollowUpAppointment", "Doctor")" class="btn btn-custom">Add Follow-Up</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card p-4 text-center">
                <div class="icon-circle">
                    <i class="bi bi-journal-plus"></i>
                </div>
                <h5 class="card-title">Add Medical Record</h5>
                <p>Record new medical information</p>
                <a href="@Url.Action("AddMedicalRecord", "Doctor")" class="btn btn-custom">Add Record</a>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card p-4 text-center">
                <div class="icon-circle">
                    <i class="bi bi-clipboard-data"></i>
                </div>
                <h5 class="card-title">Total Appointments</h5>
                <p>View all appointments</p>
                <a href="@Url.Action("Appointments", "Doctor")" class="btn btn-custom">View All</a>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card p-4 text-center">
                <div class="icon-circle">
                    <i class="bi bi-journal"></i>
                </div>
                <h5 class="card-title">View Medical Records</h5>
                <p>Access all medical records</p>
                <a href="@Url.Action("ViewMedicalRecords", "Doctor")" class="btn btn-custom">View Records</a>
            </div>
        </div>
    </div>

</div>

<!-- Bootstrap 5 JS and Popper.js -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<style>
    body {
        background-color: #f0f4f7;
        font-family: 'Arial', sans-serif;
    }

    .card {
        border: none;
        border-radius: 16px;
        background-color: #ffffff;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.05);
        transition: box-shadow 0.3s ease;
    }

    .card:hover {
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        font-weight: 600;
        font-size: 1.2rem;
        color: #2d3748;
    }

    .btn-custom {
        background-color: rgb(13, 110, 253);
        color: white;
        border-radius: 8px;
        padding: 0.6rem 1.4rem;
        font-size: 1rem;
    }

    .btn-custom:hover {
        background-color: rgba(13, 110, 253, 0.9);
    }

    .icon-circle {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background-color: rgb(13, 110, 253);
        color: white;
        font-size: 28px;
        margin-bottom: 15px;
    }

    .section-title {
        font-weight: 600;
        font-size: 1.4rem;
        color: rgb(13, 110, 253);
        margin: 1.5rem 0 1rem;
        text-align: center;
    }

    .centered-content {
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .list-unstyled li {
        margin-bottom: 0.4rem;
        font-size: 1rem;
        color: #4a5568;
    }

    h2 {
        font-size: 2rem;
        color: rgb(13, 110, 253);
        font-weight: bold;
        margin-bottom: 2rem;
    }

    .card p {
        color: #718096;
    }

    .container {
        max-width: 960px;
    }

    .btn-outline-custom {
        background-color: transparent;
        border: 1px solid rgb(13, 110, 253);
        color: rgb(13, 110, 253);
        border-radius: 8px;
        padding: 0.6rem 1.4rem;
    }

    .btn-outline-custom:hover {
        background-color: rgb(13, 110, 253);
        color: white;
    }
</style>
