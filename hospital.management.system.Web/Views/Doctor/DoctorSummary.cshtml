@model hospital.management.system.BLL.Models.Doctors.DoctorMonthlyAppointmentSummary

<div class="container mt-5">
    <!-- Dashboard Header -->
    <div class="row mb-4 text-center">
        <div class="col">
            <h2 class="text-primary font-weight-bold">Doctor's Appointment Summary</h2>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row text-center">
        <!-- Total Appointments Card -->
        <div class="col-lg-2 col-md-4 col-sm-6 mb-4 mx-auto">
            <div class="card border-0 shadow-sm rounded-lg" style="background-color: #C1E1FF;">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-secondary">Total Appointments</h6>
                        <p class="display-6 font-weight-bold text-dark">@Model.TotalAppointments</p>
                    </div>
                    <i class="fas fa-calendar-check fa-3x text-muted"></i>
                </div>
            </div>
        </div>

        <!-- Approved Appointments Card -->
        <div class="col-lg-2 col-md-4 col-sm-6 mb-4 mx-auto">
            <div class="card border-0 shadow-sm rounded-lg" style="background-color: #C8F7C5;">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-secondary">Approved Appointments</h6>
                        <p class="display-6 font-weight-bold text-dark">@Model.ApprovedAppointments</p>
                    </div>
                    <i class="fas fa-check-circle fa-3x text-muted"></i>
                </div>
            </div>
        </div>

        <!-- Pending Appointments Card -->
        <div class="col-lg-2 col-md-4 col-sm-6 mb-4 mx-auto">
            <div class="card border-0 shadow-sm rounded-lg" style="background-color: #FFF3CD;">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-secondary">Pending Appointments</h6>
                        <p class="display-6 font-weight-bold text-dark">@Model.PendingAppointments</p>
                    </div>
                    <i class="fas fa-hourglass-half fa-3x text-muted"></i>
                </div>
            </div>
        </div>

        <!-- Rejected Appointments Card -->
        <div class="col-lg-2 col-md-4 col-sm-6 mb-4 mx-auto">
            <div class="card border-0 shadow-sm rounded-lg" style="background-color: #FFDDC1;">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-secondary">Rejected Appointments</h6>
                        <p class="display-6 font-weight-bold text-dark">@Model.RejectedAppointments</p>
                    </div>
                    <i class="fas fa-times-circle fa-3x text-muted"></i>
                </div>
            </div>
        </div>

        <!-- Completed Appointments Card -->
        <div class="col-lg-2 col-md-4 col-sm-6 mb-4 mx-auto">
            <div class="card border-0 shadow-sm rounded-lg" style="background-color: #D1C4E9;">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-secondary">Completed Appointments</h6>
                        <p class="display-6 font-weight-bold text-dark">@Model.CompletedAppointments</p>
                    </div>
                    <i class="fas fa-check-square fa-3x text-muted"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Navigation Buttons -->
    <div class="row mb-5 text-center">
        <div class="col-md-12">
            <a href="~/Doctor/Appointments" class="btn btn-outline-primary rounded-pill m-3 px-4">View All Appointments</a>
            <a href="~/Doctor/Profile" class="btn btn-outline-success rounded-pill m-3 px-4">View Profile</a>
        </div>
    </div>

    <!-- Table for Appointment Details (Optional) -->
    <div class="row mt-5">
        <div class="col-md-12">
            <div class="card shadow-sm rounded-lg">
                <div class="card-header bg-gradient-primary text-white rounded-top"
                     style="background: linear-gradient(135deg, #4A90E2, #72C3DC);">
                    <h3 class="mb-0">Monthly Appointments Summary</h3>
                </div>
                <div class="card-body">
                    <table class="table table-hover table-striped rounded-lg">
                        <thead class="thead-light">
                        <tr>
                            <th scope="col">Category</th>
                            <th scope="col">Count</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>Total Appointments</td>
                            <td>@Model.TotalAppointments</td>
                        </tr>
                        <tr>
                            <td>Approved Appointments</td>
                            <td>@Model.ApprovedAppointments</td>
                        </tr>
                        <tr>
                            <td>Pending Appointments</td>
                            <td>@Model.PendingAppointments</td>
                        </tr>
                        <tr>
                            <td>Rejected Appointments</td>
                            <td>@Model.RejectedAppointments</td>
                        </tr>
                        <tr>
                            <td>Completed Appointments</td>
                            <td>@Model.CompletedAppointments</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js"></script>
<style>
    /* Card hover effects */
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    /* Table styling */
    .table th {
        font-weight: 600;
        text-transform: uppercase;
        color: #2D3748;
    }

    .table-hover tbody tr:hover {
        background-color: #EDF2F7;
    }
</style>
